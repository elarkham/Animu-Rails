<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Show</th>
      <th>Status</th>
      <th>Dir</th>
      <th>Grp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.name %></td>
        <td><%= episode.show %></td>
        <td><%= episode.status %></td>
        <td><%= episode.dir %></td>
        <td><%= episode.grp %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

