<h1>Archive: Movies</h1>
<% @shows.each do |show| %>
    <div class="container">
        <div class="row entry">
            <div class="col-sm-4">
                <img alt="Poster" src="<%=show.poster%>" class="poster">
            </div>
            <div class="col-sm-8">
                <div class="title"><%= link_to show.name, show, class: 'name'%></div>
            </div>
        </div>
     </div>
<% end %>
